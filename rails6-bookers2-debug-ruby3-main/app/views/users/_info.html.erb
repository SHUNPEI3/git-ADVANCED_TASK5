<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follow</th>
    <th>
      <%= link_to user_following_user_path(user.id) do %>
        <%= user.following_user.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>followed</th>
    <th>
      <%= link_to user_followed_user_path(user.id) do %>
        <%= user.followed_user.count %>
      <% end %>
    </th>
  </tr>
</table>

<div class='row'>
  <% unless user.id == current_user.id %>
    <% if current_user.following?(user) %>
      <%= link_to 'フォローを外す', user_relationships_path(user.id),method: :delete, class:"btn btn-info" %>
    <% else %>
      <%= link_to 'フォローする', user_relationships_path(user.id),method: :post, class:"btn btn-success" %>
    <% end %>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>