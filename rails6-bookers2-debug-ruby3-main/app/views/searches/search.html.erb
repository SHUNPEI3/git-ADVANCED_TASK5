<% if @model == "book" %>
  <h3> Books Search For "<%= @content %>" </h3>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opnion</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= image_tag record.user.get_profile_image %></td>
          <td><%= link_to record.title, book_path(record.id) %></td>
          <td><%= record.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% elsif @model == "user" %>
  <h3> Users Search For "<%= @content %>" </h3>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <td><%= image_tag record.get_profile_image %></td>
          <td><%= record.name %></td>
          <td><%= record.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
