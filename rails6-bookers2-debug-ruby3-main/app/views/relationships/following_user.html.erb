<h1>Follow Users</h1>
<% unless @users.exists? %>
  ユーザーはいません
<% else %>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image %></td>
      <td><%= user.name %></td>
      <td>フォロー数：<%= user.following_user.count %></td>
      <td>フォロワー数：<%= user.followed_user.count %></td>
      <td><%= link_to 'Show',user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>